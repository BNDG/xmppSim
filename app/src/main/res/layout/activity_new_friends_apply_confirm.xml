<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_tab_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/send_friend_request"
                android:textColor="@color/black_deep"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/item_tab_bg"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/send_friend_request"
                android:textColor="#80000000"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_88"
            android:background="@drawable/item_tab_bg"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <EditText
                android:id="@+id/et_apply_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/bg_light_grey"
                android:maxLines="3"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:text="我是zhou"
                android:textColor="@color/main_menu_text_color"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/item_tab_bg"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/set_alias"
                android:textColor="#80000000"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/item_tab_bg"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <EditText
                android:id="@+id/et_contact_alias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/bg_light_grey"
                android:paddingLeft="@dimen/dp_12"
                android:text="Zhou"
                android:textColor="@color/main_menu_text_color"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/item_tab_bg"
            android:paddingLeft="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_5"
                android:text="@string/set_privacy"
                android:textColor="#80000000"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_tab_bg"
            android:paddingLeft="@dimen/dp_20"
            android:visibility="invisible"
            android:paddingRight="@dimen/dp_20">

            <RelativeLayout
                android:id="@+id/rl_chats_moments_werun_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_chats_moments_werun_etc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:layout_alignParentLeft="true"
                    android:background="@color/bg_light_grey"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="@string/chats_more_privacy"
                    android:textColor="@color/main_menu_text_color"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_chats_moments_werun_etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/icon_correct" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_below="@id/tv_chats_moments_werun_etc"
                    android:background="#d6d6d6" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_chats_only"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_chats_moments_werun_etc">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:layout_alignParentLeft="true"
                    android:background="@color/bg_light_grey"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="@string/chats_only"
                    android:textColor="@color/main_menu_text_color"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_chats_only"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/icon_correct"
                    android:visibility="gone" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>