<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_new_friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contacts_layout_height"
        android:background="@drawable/item_tab_bg"
        android:clickable="true">

        <ImageView
            android:id="@+id/sdv_new_friends"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:src="@mipmap/icon_contacts_new_friends" />

        <TextView
            android:id="@+id/tv_new_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_toRightOf="@id/sdv_new_friends"
            android:text="@string/verification_msg"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/contacts_text_size" />

        <com.hjq.demo.widget.badgetextview.MaterialBadgeTextView
            android:id="@+id/tv_new_friends_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@color/unread_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible"
            tools:text="1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/rl_group_chats"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contacts_layout_height"
        android:background="@drawable/item_tab_bg"
        android:clickable="true">

        <ImageView
            android:id="@+id/sdv_group_chats"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:src="@drawable/icon_contacts_group_chats" />

        <TextView
            android:id="@+id/tv_my_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_toRightOf="@id/sdv_group_chats"
            android:text="@string/my_group_chats"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/contacts_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="#d9d9d9"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contacts_layout_height"
        android:background="@drawable/item_tab_bg"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/sdv_tags"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:src="@mipmap/icon_contacts_tags" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_toRightOf="@id/sdv_tags"
            android:text="@string/tag"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/contacts_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="@color/common_divider_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contacts_layout_height"
        android:background="@drawable/item_tab_bg"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/sdv_contacts_official_accounts"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:src="@mipmap/icon_contacts_official_accounts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/label_margin_left"
            android:layout_toRightOf="@id/sdv_contacts_official_accounts"
            android:text="@string/official_accounts"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/contacts_text_size" />
    </RelativeLayout>

</LinearLayout>