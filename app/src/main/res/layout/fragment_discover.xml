<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_page_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="@color/titlebar_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/tab_discover"
            android:textColor="@color/common_top_title"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:clickable="true"
            android:src="@drawable/icon_main_activity_add_normal" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_add"
            android:clickable="true"
            android:src="@drawable/icon_main_activity_search_normal" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_moments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_moments"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_moments" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_moments"
                    android:text="@string/moments"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_scan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:layout_marginTop="@dimen/discover_thick_divider_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_scan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_scan"
                    android:text="@string/scan"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/discover_divider_margin_left"
                    android:background="@color/common_divider_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_shake"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_shake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_shake"
                    android:text="@string/shake"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_top_stories"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_top_stories" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_top_stories"
                    android:text="@string/top_stories"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/discover_divider_margin_left"
                    android:background="@color/common_divider_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_search_label"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_search_label"
                    android:text="@string/discover_search"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_people_nearby"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:layout_marginTop="@dimen/discover_thick_divider_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_people_nearby"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_people_nearby" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_people_nearby"
                    android:text="@string/people_nearby"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:id="@+id/iv_open_people_nearby"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@id/iv_people_nearby_more"
                    android:src="@drawable/icon_footprint"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_people_nearby_more"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:layout_marginTop="@dimen/discover_thick_divider_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_shopping"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_shopping" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_shopping"
                    android:text="@string/shopping"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/discover_divider_margin_left"
                    android:background="@color/common_divider_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_game"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:paddingLeft="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_game"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_games" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/discover_text_margin_left"
                    android:layout_toRightOf="@id/iv_game"
                    android:text="@string/game"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mini_programs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/discover_layout_height"
                android:layout_marginTop="@dimen/discover_thick_divider_height"
                android:background="@drawable/item_tab_bg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/discover_layout_padding_start">

                <ImageView
                    android:id="@+id/iv_mini_programs"
                    android:layout_width="@dimen/discover_icon_width"
                    android:layout_height="@dimen/discover_icon_height"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_icon_margin_left"
                    android:src="@drawable/icon_discover_mini_programs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/discover_text_margin_left"
                    android:layout_toEndOf="@id/iv_mini_programs"
                    android:text="@string/mini_programs"
                    android:textColor="@color/common_text_color_black"
                    android:textSize="@dimen/discover_text_size" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>