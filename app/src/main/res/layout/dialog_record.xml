<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.hjq.demo.chat.voice.WXVoiceButton
            android:id="@+id/btn_wx_voice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15" />


        <TextView
            android:id="@+id/rc_audio_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14"
            tools:text="松开 发送" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/ic_voice_record_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_33"
        android:src="@drawable/ic_voice_mic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_120"
        android:drawableStart="@drawable/ic_voice_tip"
        android:drawableLeft="@drawable/ic_voice_tip"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/swipe_up_to_cancel"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />
</FrameLayout>